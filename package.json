{
  "name": "omfiles-js",
  "version": "0.0.0",
  "description": "JavaScript bindings for omfiles using WebAssembly",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run build:wasm && npm run build:ts && npm run copy:wasm",
    "build:wasm": "sudo docker run --rm --user $(id -u):$(id -g) -v $(pwd):/src emscripten/emsdk make -C /src",
    "build:ts": "tsc -p tsconfig.json",
    "copy:wasm": "copyfiles -u 1 src/wasm/* dist/",
    "dev": "vite",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.1.3",
    "copyfiles": "^2.4.1",
    "vite-plugin-top-level-await": "^1.5.0",
    "vite-plugin-wasm": "^3.4.1",
    "vitest": "^3.1.3"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.758.0"
  },
  "files": [
    "dist/**/*"
  ]
}
