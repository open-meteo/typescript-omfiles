{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "node",
  "packages": {
    ".": {
      "package-name": "omfiles",
      "extra-files": [
        {
          "type": "json",
          "path": "packages/file-format-wasm/package.json",
          "jsonpath": "$.version"
        },
        {
          "type": "json",
          "path": "packages/file-reader/package.json",
          "jsonpath": "$.version"
        }
      ]
    }
  },
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "bootstrap-sha": "HEAD",
  "include-v-in-tag": true
}
